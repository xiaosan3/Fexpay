<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4DFFFFFF"
    tools:context="com.blackpai.otc.fexpay.ui.register.SetMessageActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="33px" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/sm_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sm_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30px"
            android:text="登录"
            android:textColor="#7A98F7" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/sm_nickname"
            android:layout_width="583px"
            android:layout_height="70px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130px"
            android:background="@drawable/buy_btc_edittext"
            android:hint="请输入昵称（不可更改）" />


        <EditText
            android:id="@+id/sm_ok_pass"
            android:layout_width="583px"
            android:layout_height="70px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="318px"
            android:background="@drawable/buy_btc_edittext"
            android:hint="请重复输入资金密码" />

        <Button
            android:id="@+id/sm_register"
            android:layout_width="579px"
            android:layout_height="83px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="475px"
            android:text="注册" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sm_nickname"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/sm_nickname"
            android:layout_gravity="right"
            android:layout_marginTop="31px"
            android:text="设置用户信息"
            android:textColor="#4A4A4A"
            android:textSize="42px" />

        <EditText
            android:id="@+id/sm_pass"
            android:layout_width="583px"
            android:layout_height="70px"
            android:layout_marginTop="13dp"
            android:background="@drawable/buy_btc_edittext"
            android:hint="请输入资金密码"
            android:layout_below="@+id/sm_nickname"
            android:layout_alignLeft="@+id/sm_ok_pass"
            android:layout_alignStart="@+id/sm_ok_pass" />

    </RelativeLayout>
</LinearLayout>
