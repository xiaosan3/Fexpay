<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sweep__code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.transaction.SweepCodeActivity">

    <com.zhangke.qrcodeview.QRCodeView
        android:id="@+id/qr_code_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:frameColor="@android:color/white"
        app:pointColor="@color/colorAccent"
        app:showPoint="true"
        app:showSlider="true"
        app:sliderColor="@android:color/holo_green_dark" />
</LinearLayout>
