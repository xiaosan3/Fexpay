<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31px"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:text="法定货币"
                        android:textColor="#000000"
                        android:textSize="24px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="数字货币"
                        android:textColor="#000000"
                        android:textSize="24px" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RadioGroup
                        android:id="@+id/flat_money_rg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/currency_cny"
                            android:layout_width="122px"
                            android:layout_height="52px"
                            android:layout_marginLeft="52px"
                            android:layout_marginTop="44px"
                            android:background="@drawable/money_button"
                            android:button="@null"
                            android:paddingLeft="54px"
                            android:text="CNY"
                            android:textColor="@drawable/money_text"
                            android:textSize="24px" />

                        <RadioButton
                            android:id="@+id/currency_usd"
                            android:layout_width="122px"
                            android:layout_height="52px"
                            android:layout_marginLeft="52px"
                            android:layout_marginTop="44px"
                            android:background="@drawable/money_button"
                            android:button="@null"
                            android:paddingLeft="54px"
                            android:text="USD"
                            android:textColor="@drawable/money_text"
                            android:textSize="24px" />
                    </RadioGroup>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RadioGroup
                        android:id="@+id/number_money_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/currency_btc"
                            android:layout_width="122px"
                            android:layout_height="52px"
                            android:layout_marginLeft="44px"
                            android:layout_marginTop="44px"
                            android:background="@drawable/money_button"
                            android:button="@null"
                            android:paddingLeft="54px"
                            android:text="BTC"
                            android:textColor="@drawable/money_text"
                            android:textSize="24px" />

                        <RadioButton
                            android:id="@+id/currency_eth"
                            android:layout_width="122px"
                            android:layout_height="52px"
                            android:layout_marginLeft="44px"
                            android:layout_marginTop="44px"
                            android:background="@drawable/money_button"
                            android:button="@null"
                            android:paddingLeft="54px"
                            android:text="ETH"
                            android:textColor="@drawable/money_text"
                            android:textSize="24px" />

                        <RadioButton
                            android:id="@+id/currency_und"
                            android:layout_width="122px"
                            android:layout_height="52px"
                            android:layout_marginLeft="-290px"
                            android:layout_marginTop="120px"
                            android:background="@drawable/money_button"
                            android:button="@null"
                            android:paddingLeft="54px"
                            android:text="UND"
                            android:textColor="@drawable/money_text"
                            android:textSize="24px" />

                    </RadioGroup>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="5px"
            android:layout_height="120px"
            android:layout_marginLeft="357px"
            android:layout_marginTop="114px"
            android:background="#FFACB2DC" />


        <!--<TextView-->
        <!--android:layout_width="52px"-->
        <!--android:layout_height="32px"-->
        <!--android:layout_marginLeft="461px"-->
        <!--android:layout_marginTop="195px"-->
        <!--android:text="UND"-->
        <!--android:textColor="#000000"-->
        <!--android:textSize="24px" />-->


    </RelativeLayout>

</LinearLayout>
