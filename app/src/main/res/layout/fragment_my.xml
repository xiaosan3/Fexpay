<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33C7CCE6"
    android:orientation="vertical"
    tools:context=".ui.fragments.my.MyFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4D55C9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="我的"
            android:textColor="#FFFFFF" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="306px">

            <ImageView
                android:id="@+id/vague"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/picture" />


            <ImageView
                android:id="@+id/m_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38px"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="417px"
                android:layout_height="43px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="181px"
                android:gravity="center"
                android:text="ZhangHai"
                android:textColor="#FFFFFFFF"
                android:textSize="31px" />

            <TextView
                android:layout_width="304px"
                android:layout_height="35px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="235px"
                android:gravity="center"
                android:text="成交 12345 | 成交率 98% "
                android:textColor="#FFFFFFFF"
                android:textSize="24px" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="26px"
        android:background="#33C7CCE6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="87px"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35px"
            android:text="实名认证"
            android:textColor="#FF030303"
            android:textSize="28px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="9px"
        android:background="#33C7CCE6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="87px"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35px"
                android:text="收款账号"
                android:textColor="#FF030303"
                android:textSize="28px" />
        </RelativeLayout>

        <View
            android:layout_width="689px"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:background="#66C7CCE6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="87px"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35px"
                android:text="安全中心"
                android:textColor="#FF030303"
                android:textSize="28px" />
        </RelativeLayout>

        <View
            android:layout_width="689px"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:background="#66C7CCE6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="87px"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35px"
                android:text="广告管理"
                android:textColor="#FF030303"
                android:textSize="28px" />
        </RelativeLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="9px"
        android:background="#33C7CCE6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="87px"
            android:background="#ffffff">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:text="关于我们"
                android:textColor="#FF030303"
                android:textSize="28px" />
        </RelativeLayout>

        <View
            android:layout_width="689px"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:background="#66C7CCE6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="87px"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35px"
                android:text="设置"
                android:textColor="#FF030303"
                android:textSize="28px" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
