        android:layout_height="70px"
        android:layout_marginLeft="35px"
        android:layout_marginTop="263px"
        android:background="@drawable/buy_btc_edittext" />

    <Button
        android:layout_width="318px"
        android:layout_height="70px"
        android:layout_marginLeft="35px"
        android:layout_marginTop="384px"
        android:background="@drawable/resetting_stroke"
        android:text="重置"
        android:textColor="#7A98F7" />

    <Button
        android:layout_width="318px"
        android:layout_height="70px"
        android:layout_marginLeft="367px"
        android:layout_marginTop="384px"
        android:background="#7A98F7"
        android:text="全部"
        android:textColor="#ffffff" />
