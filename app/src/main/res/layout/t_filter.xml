        android:textColor="#4A4A4A"
        android:textSize="24px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35px"
        android:layout_marginTop="210px"
        android:text="限额"
        android:textColor="#000000"
        android:textSize="24px" />

    <EditText
